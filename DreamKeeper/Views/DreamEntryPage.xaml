<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DreamKeeper.Views.DreamEntryPage"
             Title="DreamEntryPage"
             BackgroundColor="GhostWhite">
    <StackLayout Padding="20">
        <Entry x:Name="DreamNameEntry" Placeholder="Enter dream title" />
        <Entry x:Name="DreamDescriptionEntry" Placeholder="Enter dream details" />
        <!-- Other entry fields as needed -->

        <Button Text="Save" Clicked="SaveButton_Clicked" />
    </StackLayout>
</ContentPage>