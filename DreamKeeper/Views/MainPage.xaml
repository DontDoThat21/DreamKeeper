             x:Class="DreamKeeper.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" ColumnDefinitions="*,*" RowSpacing="15" BackgroundColor="Green">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <Frame Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Padding="10">
                    <StackLayout>
                        <Label Text="Good morning, {Name}!"/>
                        <Button Text="➕" Grid.Row="0" Grid.Column="1"/>
                    </StackLayout>
                </Frame>

                <CollectionView ItemsSource="{Binding dreams}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="Cyan" Grid.Row="1" Grid.ColumnSpan="2">
                                <StackLayout>

                                    <Grid ColumnDefinitions="2.25*, 2.25*, 2.25*, Auto" RowDefinitions="1*, 3*">

                                        <Label Text="{Binding DreamName}" Grid.Column="0" FontAttributes="Bold"/>
                                        <Label Text="{Binding DreamDate}" Grid.Column="2"/>
                                        <Label Text="🎤" Grid.Column="3" Grid.Row="0"/>

                                        <Entry Placeholder="Enter dream details here..." Grid.Row="1"/>
                                    </Grid>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

